<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/pickIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick icon" />


        <Button
            android:id="@+id/pickLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick logo" />

        <Button
            android:id="@+id/pickStrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick strip" />

        <Button
            android:id="@+id/pickThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick thumbnail" />
    </LinearLayout>
</ScrollView>
